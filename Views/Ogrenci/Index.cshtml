@using OgrenciNotMvcProject.Models.EntityFramework;
@model List<Tbl_Ogrenci>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Fotoğrafı</th>
        <th>Cinsiyet</th>
        <th>Kulüp</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var ogr in Model)
            {
                <tr>
                    <td>@ogr.OgrenciID</td>
                    <td>@ogr.OgrAd</td>
                    <td>@ogr.OgrSoyad</td>
                    <td>@ogr.OgrFoto</td>
                    <td>@ogr.OgrCinsiyet</td>
                    <td>@ogr.Tbl_Kulup.KulupAd</td>
                    <td><a href="/Ogrenci/Sil/@ogr.OgrenciID" class="btn btn-warning">SİL </a>
                    <a href="/Ogrenci/OgrenciGetir/@ogr.OgrenciID" class="btn btn-success">GÜNCELLE</a></td>
                </tr>
            }
    </tbody>
</table>

<a href="/Not/YeniOgrenci" class="btn btn-primary">Yeni Ogrenci Kaydı</a>

